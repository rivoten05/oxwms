font_family      Maple Mono NF
bold_font        auto
italic_font      auto
bold_italic_font auto


# Regular
font_features MapleMono-NF-Regular +calt +cv01 +ss01 +zero
# Bold
font_features MapleMono-NF-Bold +calt +cv01 +ss01 +zero
# Italic
font_features MapleMono-NF-Italic +calt +cv01 +ss01 +zero
# Bold Italic
font_features MapleMono-NF-BoldItalic +calt +cv01 +ss01 +zero


font_size 13.0

disable_ligatures never

background_opacity 0.0
dynamic_background_opacity yes
hide_window_decorations yes
confirm_os_window_close 0
window_padding_width 0
# Animated cursor
cursor_trail 1

# change to x11 or wayland or leave auto
linux_display_server x11

scrollback_lines 2000
wheel_scroll_min_lines 1

enable_audio_bell no

allow_remote_control yes

# BEGIN_KITTY_THEME
# Ayu
include cyberdream.conf
# END_KITTY_THEME
